<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
  {% for job in joblist %}
    <a href="{{ job.url | url }}">
      <h2>
        <span class="font-mono font-normal">{{ job.data.date | date }}</span>
        <span>{{ job.data.title }}</span>
      </h2>
      <span>{{ job.data.tag }}</span>
    </a>
  {% endfor %}
</div>
